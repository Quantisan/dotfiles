{
  "env": {
    "MAX_THINKING_TOKENS": "30000"
  },
  "permissions": {
    "allow": [
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(gh pr list:*)",
      "Skill(commit)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  },
  "model": "opus",
  "enabledPlugins": {
    "superpowers@claude-plugins-official": true,
    "elements-of-style@superpowers-marketplace": true
  }
}
